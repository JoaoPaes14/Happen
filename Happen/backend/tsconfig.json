{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,         
    "allowSyntheticDefaultImports": true, 
    "outDir": "./dist",              
    "resolveJsonModule": true,      
    "typeRoots": ["./node_modules/@types"], 
    "baseUrl": "./",                
    "skipLibCheck": true    ,
    "rootDir": "./src"         
  },
  "include": ["./**/*.ts"],          
  "exclude": ["node_modules"]       
}